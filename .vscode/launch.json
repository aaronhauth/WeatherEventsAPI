{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run API with ts-node-dev",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["ts-node-dev", "--respawn", "src/index.ts"],
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}